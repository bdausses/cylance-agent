---
driver:
  name: azurerm

driver_config:
  subscription_id: b02e675a-cee0-49bd-a056-daa7ed05bf4e
  location: East US
  machine_size: Standard_D2_v2

transport:
  ssh_key: ~/.ssh/id_rsa

provisioner:
  name: chef_zero

verifier:
  name: inspec

platforms:
  - name: centos-7
    driver_config:
      image_urn: OpenLogic:CentOS:7.4:latest
      vm_name: centos-vm
      vm_tags:
        ostype: linux
        distro: centos

suites:
  - name: default
    run_list:
      - recipe[cylance-agent::default]
    verifier:
      inspec_tests:
        - test/smoke/default
    attributes:
